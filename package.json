{
  "name": "pocket-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Local-first database for web applications",
  "keywords": [
    "database",
    "local-first",
    "offline-first",
    "sync",
    "reactive"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test --continue",
    "test:unit": "vitest run --project unit",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --project integration",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
    "typecheck": "turbo run typecheck",
    "validate": "turbo run build && turbo run lint && turbo run typecheck && turbo run test --continue",
    "clean": "turbo run clean && rm -rf node_modules",
    "size-limit": "size-limit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "docs": "typedoc",
    "docs:api": "typedoc",
    "docs:dev": "pnpm --filter website dev",
    "docs:build": "pnpm --filter website build",
    "docs:preview": "pnpm --filter website preview",
    "test:audit": "bash scripts/check-test-coverage.sh",
    "check:readmes": "node scripts/check-package-readmes.mjs",
    "create-package": "node scripts/create-package.mjs",
    "bench": "pnpm --filter @pocket/benchmarks bench",
    "audit:metadata": "node scripts/audit-package-metadata.mjs",
    "prepublish:check": "node scripts/pre-publish-check.mjs",
    "status": "node scripts/package-status.mjs",
    "health": "node scripts/health-check.mjs",
    "quickstart": "cp -n .env.example .env.local 2>/dev/null || true && pnpm install && pnpm build && echo '' && echo 'âœ… Pocket is ready!' && echo '' && pnpm status && echo '' && echo 'Next steps:' && echo '  pnpm test              Run all tests' && echo '  pnpm status            View package health' && echo '  See QUICKSTART.md      5-minute contributor guide' && echo ''",
    "test:package": "npx turbo run test --filter",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.39.2",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fake-indexeddb": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "turbo": "^2.0.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "size-limit": [
    {
      "path": "packages/core/dist/index.js",
      "limit": "25 KB"
    },
    {
      "path": "packages/react/dist/index.js",
      "limit": "8 KB"
    },
    {
      "path": "packages/sync/dist/index.js",
      "limit": "12 KB"
    },
    {
      "path": "packages/storage-indexeddb/dist/index.js",
      "limit": "5 KB"
    },
    {
      "path": "packages/storage-opfs/dist/index.js",
      "limit": "8 KB"
    },
    {
      "path": "packages/storage-memory/dist/index.js",
      "limit": "5 KB"
    },
    {
      "path": "packages/cloud/dist/index.js",
      "limit": "30 KB"
    },
    {
      "path": "packages/ai/dist/index.js",
      "limit": "25 KB"
    }
  ]
}
