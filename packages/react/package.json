{
  "name": "@pocket/react",
  "version": "0.1.0",
  "description": "React hooks and components for Pocket database",
  "keywords": [
    "pocket",
    "react",
    "hooks",
    "database",
    "local-first"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket",
    "directory": "packages/react"
  },
  "homepage": "https://pocket-db.dev",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs",
      "types": "./dist/server/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pocket/core": "workspace:*",
    "rxjs": "^7.8.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  }
}
