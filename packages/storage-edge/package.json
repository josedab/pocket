{
  "name": "@pocket/storage-edge",
  "version": "0.1.0",
  "description": "Edge runtime storage adapters for Pocket - Cloudflare Durable Objects, Cloudflare KV, D1, Deno KV, Vercel KV, Bun SQLite",
  "license": "MIT",
  "author": "Pocket Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket",
    "directory": "packages/storage-edge"
  },
  "homepage": "https://pocket-db.dev",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cloudflare": {
      "import": {
        "types": "./dist/cloudflare.d.ts",
        "default": "./dist/cloudflare.js"
      },
      "require": {
        "types": "./dist/cloudflare.d.cts",
        "default": "./dist/cloudflare.cjs"
      }
    },
    "./deno": {
      "import": {
        "types": "./dist/deno.d.ts",
        "default": "./dist/deno.js"
      },
      "require": {
        "types": "./dist/deno.d.cts",
        "default": "./dist/deno.cjs"
      }
    },
    "./vercel": {
      "import": {
        "types": "./dist/vercel.d.ts",
        "default": "./dist/vercel.js"
      },
      "require": {
        "types": "./dist/vercel.d.cts",
        "default": "./dist/vercel.cjs"
      }
    },
    "./bun": {
      "import": {
        "types": "./dist/bun.d.ts",
        "default": "./dist/bun.js"
      },
      "require": {
        "types": "./dist/bun.d.cts",
        "default": "./dist/bun.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pocket/core": "workspace:*",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "pocket",
    "storage",
    "edge",
    "cloudflare",
    "deno",
    "vercel",
    "bun",
    "workers",
    "database",
    "local-first"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
