{
  "name": "@pocket/wasm-engine",
  "version": "0.1.0",
  "description": "WebAssembly-accelerated query engine for Pocket with Web Worker offloading and JS fallback",
  "keywords": [
    "pocket",
    "database",
    "local-first",
    "wasm",
    "webassembly",
    "query-engine",
    "web-worker",
    "performance"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@pocket/core": "workspace:*",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket.git",
    "directory": "packages/wasm-engine"
  },
  "homepage": "https://github.com/pocket-db/pocket/tree/main/packages/wasm-engine",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  }
}
