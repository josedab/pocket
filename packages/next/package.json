{
  "name": "@pocket/next",
  "version": "0.1.0",
  "description": "Next.js integration for Pocket with RSC support",
  "keywords": [
    "pocket",
    "database",
    "local-first",
    "nextjs",
    "rsc",
    "server-components"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket",
    "directory": "packages/next"
  },
  "homepage": "https://pocket-db.dev",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@pocket/core": "workspace:*",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
