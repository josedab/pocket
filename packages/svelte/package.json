{
  "name": "@pocket/svelte",
  "version": "0.1.0",
  "description": "Svelte stores and utilities for Pocket database",
  "keywords": [
    "pocket",
    "svelte",
    "stores",
    "database",
    "local-first",
    "reactive"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket",
    "directory": "packages/svelte"
  },
  "homepage": "https://pocket-db.dev",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pocket/core": "workspace:*",
    "rxjs": "^7.8.0"
  },
  "peerDependencies": {
    "svelte": ">=4.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^20.10.0",
    "svelte": "^4.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  }
}
