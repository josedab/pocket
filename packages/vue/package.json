{
  "name": "@pocket/vue",
  "version": "0.1.0",
  "description": "Vue composables and components for Pocket database",
  "keywords": [
    "pocket",
    "vue",
    "composables",
    "database",
    "local-first",
    "reactive"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket",
    "directory": "packages/vue"
  },
  "homepage": "https://pocket-db.dev",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pocket/core": "workspace:*",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "vue": ">=3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vue/test-utils": "^2.4.0",
    "happy-dom": "^12.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0",
    "vue": "^3.4.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
