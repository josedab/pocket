{
  "name": "create-pocket-app",
  "version": "0.1.0",
  "description": "Create a new Pocket app with one command",
  "keywords": [
    "pocket",
    "create",
    "cli",
    "scaffolding",
    "local-first"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "type": "module",
  "bin": {
    "create-pocket-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
