{
  "name": "@pocket/collaboration-ui",
  "version": "0.1.0",
  "description": "Production-grade React components for collaborative cursors, selections, and typing indicators",
  "keywords": [
    "pocket",
    "collaboration",
    "cursor",
    "presence",
    "react",
    "crdt"
  ],
  "license": "MIT",
  "author": "Pocket Contributors",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pocket-db/pocket.git",
    "directory": "packages/collaboration-ui"
  },
  "homepage": "https://github.com/pocket-db/pocket/tree/main/packages/collaboration-ui",
  "bugs": {
    "url": "https://github.com/pocket-db/pocket/issues"
  }
}
